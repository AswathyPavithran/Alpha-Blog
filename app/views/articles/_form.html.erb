<body style="background-color:#BEE0F9">

        <%= render 'shared/errors' ,obj:@article %>
   
			
			<div class='row'> 
				<div class="col-xs-12">
					<%= form_for(@article, :html=>{class: "form-horizontal",role: "form"})do |i| %>
					<div class="form-group">
				    	<div class="control-label col-sm-2">
				        	<%= i.label :title %>
				     	</div>
				    	<div class="col-sm-8">
				    		<%= i.text_field :title ,class: "form-control",placeholder: "Title of Article",autofocus: true%>
				    	</div>
				    </div>
				    <div class="form-group">
				    	<div class="control-label col-sm-2">
							<%= i.label :description %>
						</div>
						<div class="col-sm-8">
				    		<%= i.text_area :description, rows: 10 ,class: "form-control",placeholder: "description of Article",autofocus: true%>
				        </div>  
				    </div> 

				    <div class="form-group">
				      <div class="row">
				    	<div class="col-sm-offset-2 col-sm-8">
			            	<%= i.collection_check_boxes :category_ids,Category.all,:id, :name do |cb| %>
			            	<% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") +cb.text} %>
			            	<% end %>
			            </div>
			           </div> 
			        </div>
				    <div class="form-group">
				    	<div class="col-sm-offset-2 col-sm-10">
			            	<%= i.submit class: 'btn btn-primary btn-lg' %>
			            </div>
			        </div>
				 

				<%end%>
				<div class="col-sm-offset-2 ">
					[<%= link_to "Cancel Request and return",articles_path%>]
				</div>
				</body>
</div>
</div>