<body style="background-color:#BEE0F9">

        <%= render 'shared/errors' ,obj:@user %>
   
			
			<div class='row'> 
				<div class="col-xs-12">
					<%= form_for(@user, :html=>{class: "form-horizontal",role: "form"})do |i| %>
					<div class="form-group">
				    	<div class="control-label col-sm-2">
				        	<%= i.label :username %>
				     	</div>
				    	<div class="col-sm-8">
				    		<%= i.text_field :username ,class: "form-control",placeholder: "Enter username",autofocus: true%>
				    	</div>
				    </div>
				    <div class="form-group">
				    	<div class="control-label col-sm-2">
							<%= i.label :email %>
						</div>
						<div class="col-sm-8">
				    		<%= i.email_field :email,class: "form-control",placeholder: "Enter email",autofocus: true%>
				        </div>  
				    </div>
				   <div class="form-group">
				    	<div class="control-label col-sm-2">
							<%= i.label :password %>
						</div>
						<div class="col-sm-8">
				    		<%= i.password_field :password,class: "form-control",placeholder: "Enter password",autofocus: true%>
				        </div>  
				    </div>
				    
				    <div class="form-group">
				    	<div class="col-sm-offset-2 col-sm-10">
			            	<%= i.submit(@user.new_record? ? "Signup" : "Update your Account" , class: 'btn btn-primary btn-lg') %>
			            </div>
			        </div>
				 
				<%end%>
				<div class="col-sm-offset-2 ">
					[<%= link_to "Cancel Request and return",articles_path%>]
				</div>
				</body>
</div>
</div>