<h1 align="center" >Login</h1><body style="background-color:#BEE0F9">

					<%= form_for(:session, :html=>{class: "form-horizontal",role: "form"},url:login_path)do |i| %>
					<div class="form-group">
				    	<div class="control-label col-sm-2">
				        	<%= i.label :email %>
				     	</div>
				    	<div class="col-sm-8">
				    		<%= i.email_field :email ,class: "form-control",placeholder: "Enter email",autofocus: true%>
				    	</div>
				    </div>
				    <div class="form-group">
				    	<div class="control-label col-sm-2">
							<%= i.label :password %>
						</div>
						<div class="col-sm-8">
				    		<%= i.password_field :password,class: "form-control",placeholder: "Enter password",autocomplete: "off"%>
				        </div>  
				    </div>
				    
				    <div class="form-group">
				    	<div class="col-sm-offset-2 col-sm-10">
			            	<%= i.submit "Login", class: 'btn btn-primary btn-lg' %>
			            </div>
			        </div>
				 

				<%end%>
				<div class="col-sm-offset-2 ">
					[<%= link_to "Cancel Request and return",articles_path%>]
				</div>
				</body>
